<div class='media-left'>
  <button class='btn-success btn-xs btn-block up' {{action 'up'}}>
    <span class='glyphicon glyphicon-arrow-up'></span>
  </button>
  <button class='btn-danger btn-xs btn-block down' {{action 'down'}}>
    <span class='glyphicon glyphicon-arrow-down'></span>
  </button>
</div>
<div class='media-body'>
  <div class='meta'>
    {{#link-to 'collective.thing' thing.id class='label label-success balance' title=thing.id}}
      {{thing.balance}} bits{{/link-to}}
    <span class='label label-info type'>{{thing.type}}</span>
    <span class='label label-info age'>{{moment-from-now thing.created 'X'}}</span>
    <button {{action 'reply'}} class='btn btn-xs btn-primary reply'>reply</button>
  </div>
  <div class='md'>{{markdown-to-html markdown=thing.body}}</div>
  {{#if isReplying}}
    {{comment-form parent=thing.id cancel='cancelReply' saved='cancelReply'}}
  {{/if}}
  {{sorted-thread thing=thing}}
</div>
