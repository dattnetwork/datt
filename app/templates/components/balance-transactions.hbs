  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>From</th>
      <th>Amount</th>
    </tr>
  </thead><tbody>

    {{#each transactions as |transaction|}}
      <tr>
        <td>{{ago transaction.created 'X'}}</td>
        <td title="{{transaction.to.id}}">
          {{#link-to 'collective.thing' datt.defaultCollective transaction.to.id}}
            {{transaction.to.type}} -
            {{transaction.to.title}}
          {{/link-to}}
        </td>
        <td>
          {{#link-to 'collective.thing' datt.defaultCollective transaction.from.id}}
            {{transaction.from.type}} {{transaction.from.title}}
          {{/link-to}}
        </td>
        <td>{{transaction.amount}}</td>
      </tr>
    {{/each}}

  </tbody>
