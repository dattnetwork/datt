- if (!item && post) var item = post;
- if (!item && comment) var item = comment;

.left.floated(style="width: 3em; text-align: center;")
  .ui.mini.statistic
    a.label.tooltipped(data-intent="tip", title="Donate 100 bits to #{item._author.username} (configurable in settings)")
      i.add.up.icon
    .value(style="font-size: 1em;")
      i.icon.bitcoin
      |  #{item && item.score || 0}
    .label tips
